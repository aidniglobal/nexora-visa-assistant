# Copy this file to .env and set production values
# Security
SECRET_KEY=replace-with-a-secure-random-string

# Database
# For local testing you can leave DATABASE_URL unset to use sqlite.
# For production use something like: postgresql://user:pass@host:5432/dbname
DATABASE_URL=sqlite:///instance/nexora.db

# Uploads
UPLOAD_FOLDER=/home/youruser/nexora-investments/uploads
MAX_CONTENT_LENGTH=2097152

# Mail (used for inquiry responses)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
